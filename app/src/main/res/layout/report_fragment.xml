<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout"
>

    <data>
        <variable
                name="LocationUseCase"
                type="com.codesroots.mac.smart.models.MyLocationUseCase"/>
        <variable
                name="ViewModel"
                type="com.codesroots.mac.smart.presentaion.mainfragment.viewmodel.MainViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="عبر المدن"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:scaleType="fitXY"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/to"
                android:layout_marginBottom="24dp"/>

        <TextView
                android:id="@+id/to"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/linear_background"
                android:gravity="center"
                android:textColor="@color/black"

                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/img"
                android:hint="نهاية المدة"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginTop="16dp"/>
        <TextView
                android:id="@+id/from"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="30dp"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:background="@drawable/linear_background"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/img"
                android:hint="بداية المدة" app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>

        <TextView
                android:text=" الرصيد السابق :"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/from"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:id="@+id/textView5" android:textSize="18sp" android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintRight_toLeftOf="@+id/textView5"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/white"
                android:id="@+id/lastvalue" android:textSize="18sp"
                />
        <TextView
                android:text=" الرصيد الحالي :"
                app:layout_constraintTop_toBottomOf="@id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:id="@+id/textView11" android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/textView11"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:id="@+id/value" android:textSize="18sp"
                app:layout_constraintRight_toLeftOf="@+id/textView11"
                />
        <TextView
                android:text=" عمولة :"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:id="@+id/textView13" android:textSize="18sp"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:textColor="@color/black"

                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                android:layout_height="wrap_content"
                android:id="@+id/commision" android:textSize="18sp"
                app:layout_constraintRight_toLeftOf="@id/textView13"
                android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="visible"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/textView11"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
